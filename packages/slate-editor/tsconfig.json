{
    "extends": "../../tsconfig.json",

    "compilerOptions": {
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "outDir": "./build",
        "paths": {
            "components": ["./src/components"],
            "icons": ["./src/icons"],
            "lib": ["./src/lib"],
            "lib/test": ["./src/lib/test"],
            "modules/*": ["./src/modules"],
            "types": ["./src/types"]
        },
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "types": ["node"]
    },
    "exclude": ["node_modules", "**/*.test.*"],
    "include": ["./src"]
}
