{
    "name": "@prezly/slate-editor",
    "version": "0.10.0",
    "description": "The Prezly Slate Editor",
    "license": "MIT",
    "main": "build/esm/index.mjs",
    "module": "build/esm/index.mjs",
    "types": "build/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./build/types/index.d.ts",
            "import": "./build/esm/index.mjs",
            "default": "./build/esm/index.mjs"
        },
        "./styles.css": "./build/styles/styles.css",
        "./styles/mixins": {
            "sass": "./build/styles/mixins.scss"
        },
        "./styles/shared": {
            "sass": "./build/styles/shared.scss"
        },
        "./styles/variables": {
            "sass": "./build/styles/variables.scss"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prezly/slate.git"
    },
    "bugs": {
        "url": "https://github.com/prezly/slate/issues"
    },
    "homepage": "https://github.com/prezly/slate#readme",
    "scripts": {
        "lint": "eslint ./src --ext=.ts,.tsx",
        "type-check": "tsc-fancy --preserveConsoleOutput --build .",
        "build": "npm run type-check && NODE_ENV=production npm run build:transpile",
        "build:dev": "npm run type-check && NODE_ENV=development npm run build:transpile",
        "build:transpile": "npm run build:code && npm run build:svg && npm run build:types && npm run build:sass",
        "build:types": "tsc-fancy --preserveConsoleOutput --build .",
        "build:code": "gulp build:code",
        "build:svg": "gulp build:svg",
        "build:sass": "gulp build:sass",
        "watch": "concurrently --kill-others --names 'd.ts,mjs ,svg ,sass' 'npm run watch:types' 'npm run watch:code' 'npm run watch:svg' 'npm run watch:sass'",
        "watch:types": "npm run type-check -- --watch --pretty",
        "watch:code": "gulp watch:code",
        "watch:svg": "gulp watch:svg",
        "watch:sass": "gulp watch:sass",
        "clean": "npm run clean:build && npm run clean:node_modules",
        "clean:node_modules": "rimraf node_modules/",
        "clean:build": "rimraf build/* *.tsbuildinfo",
        "test": "jest --no-cache --coverage"
    },
    "dependencies": {
        "@popperjs/core": "^2.6.0",
        "@prezly/docx-cleaner": "^0.4.0",
        "@prezly/events": "^2.0.3",
        "@prezly/linear-partition": "^1.0.2",
        "@prezly/progress-promise": "^1.0.1",
        "@prezly/sdk": "^6.3.1",
        "@prezly/slate-commons": "^0.10.0",
        "@prezly/slate-hyperscript": "^0.10.0",
        "@prezly/slate-lists": "^0.10.0",
        "@prezly/slate-types": "^0.10.0",
        "@prezly/uploadcare": "^1.0.0",
        "classnames": "^2.3.1",
        "is-hotkey": "^0.2.0",
        "json-stable-stringify": "^1.0.1",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "rangefix": "^0.2.9",
        "react-bootstrap": "=0.32.4",
        "react-draggable": "^3.3.2",
        "react-overlays": "^0.8.3",
        "react-popper": "^2.2.4",
        "react-portal": "^4.2.1",
        "react-router-dom": "=5.1.2",
        "react-use": "^17.2.1",
        "shave": "^2.5.10",
        "uploadcare-widget": "=3.7.7",
        "uuid": "^8.3.0",
        "validator": "^13.5.2"
    },
    "peerDependencies": {
        "react": "^16.9.0",
        "slate": "^0.71.0",
        "slate-history": "^0.66.0",
        "slate-react": "^0.71.0"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "@types/is-hotkey": "^0.1.6",
        "@types/json-stable-stringify": "^1.0.32",
        "@types/lodash": "^4.14.167",
        "@types/react": "^16.14.2",
        "@types/react-bootstrap": "^0.32.19",
        "@types/react-overlays": "^1.1.3",
        "@types/react-portal": "^4.0.2",
        "@types/react-router-dom": "=5.1.2",
        "@types/uuid": "^8.3.0",
        "@types/validator": "^13.1.3"
    }
}
