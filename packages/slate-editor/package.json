{
    "name": "@prezly/slate-editor",
    "version": "0.80.4",
    "description": "The Prezly Slate Editor",
    "license": "MIT",
    "type": "module",
    "main": "build/esm/index.js",
    "types": "build/types/index.d.ts",
    "imports": {
        "#components": "./src/components",
        "#extensions/*": "./src/extensions/*",
        "#icons": "./src/icons",
        "#lib": "./src/lib",
        "#modules/*": "./src/modules/*"
    },
    "exports": {
        ".": {
            "types": "./build/types/index.d.ts",
            "default": "./build/esm/index.js"
        },
        "./styles.css": "./build/styles/styles.css",
        "./styles/mixins.scss": {
            "sass": "./build/styles/mixins.scss"
        },
        "./styles/variables.scss": {
            "sass": "./build/styles/variables.scss"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prezly/slate.git"
    },
    "bugs": {
        "url": "https://github.com/prezly/slate/issues"
    },
    "homepage": "https://github.com/prezly/slate#readme",
    "scripts": {
        "lint": "eslint ./src --ext=.ts,.tsx",
        "build": "pnpm build:sass && pnpm build:esm && pnpm build:types",
        "build:types": "gulp build:types",
        "build:esm": "gulp build:esm",
        "build:sass": "gulp build:sass",
        "watch": "concurrently --restart-tries 5 --kill-others --names 'd.ts,esm ,sass' 'pnpm watch:types' 'pnpm watch:esm' 'pnpm watch:sass'",
        "watch:types": "tsc-fancy --project ./tsconfig.build.json --preserveWatchOutput --watch",
        "watch:esm": "gulp watch:esm",
        "watch:sass": "gulp watch:sass",
        "clean": "pnpm clean:build && pnpm clean:node_modules",
        "clean:node_modules": "rimraf node_modules/",
        "clean:build": "rimraf build/* *.tsbuildinfo .css-modules/*",
        "test": "pnpm test:unit && pnpm test:build",
        "test:unit": "mocha --exit --config ../../.mocharc.cjs './src/**/*.test.{ts,tsx}'",
        "test:build": "pnpm test:esm && pnpm test:types",
        "test:types": "tsc --noEmit --esModuleInterop --skipLibCheck src/@types/svg.d.ts build/types/index.d.ts",
        "test:esm": "node --input-type module -e \" import '../../mockDOM.cjs'; import './build/esm/index.js'; \" ",
        "storybook:dev": "pnpm run --dir ./storybook dev",
        "storybook:build": "pnpm run --dir ./storybook build",
        "postinstall": "pnpm install --dir ./storybook --force"
    },
    "dependencies": {
        "@popperjs/core": "^2.6.0",
        "@prezly/docx-cleaner": "^0.5.2",
        "@prezly/events": "^2.0.3",
        "@prezly/linear-partition": "^1.0.3",
        "@prezly/progress-promise": "^2.0.1",
        "@prezly/sdk": "^13.0.0 || ^14.0.0",
        "@prezly/slate-commons": "workspace:*",
        "@prezly/slate-lists": "workspace:*",
        "@prezly/slate-tables": "workspace:*",
        "@prezly/slate-types": "workspace:*",
        "@prezly/uploadcare": "^2.4.0",
        "@prezly/uploadcare-widget": "^3.16.1",
        "@technically/lodash": "^4.17.0",
        "@types/combine-reducers": "^1.0.1",
        "@udecode/plate-core": "^9.0.0",
        "classnames": "^2.3.1",
        "combine-reducers": "^1.0.0",
        "is-hotkey": "^0.2.0",
        "json-stable-stringify": "^1.0.1",
        "moment": "^2.29.1",
        "popper-max-size-modifier": "^0.2.0",
        "rangefix": "^0.2.9",
        "react-bootstrap": "=0.32.4",
        "react-custom-scrollbars-2": "^4.4.0",
        "react-draggable": "^4.4.5",
        "react-overlays": "^5.2.1",
        "react-popper": "^2.2.4",
        "react-portal": "^4.2.1",
        "react-router-dom": "=5.1.2",
        "react-use": "^17.2.1",
        "resize-observer-polyfill": "^1.5.1",
        "shave": "^2.5.10",
        "striptags": "^3.2.0",
        "uuid": "^8.3.0",
        "validator": "^13.5.2"
    },
    "peerDependencies": {
        "react": "^16.14.0 || ^17.0.0 || ^18.0.0",
        "react-dom": "^16.14.0 || ^17.0.0 || ^18.0.0",
        "slate": "^0.91.4",
        "slate-history": "^0.86.0",
        "slate-react": "^0.91.7"
    },
    "devDependencies": {
        "@babel/core": "^7.18.5",
        "@types/is-hotkey": "^0.1.7",
        "@types/json-stable-stringify": "^1.0.32",
        "@types/node": "^18.13.0",
        "@types/react-bootstrap": "^0.32.32",
        "@types/react-overlays": "^3.1.0",
        "@types/react-portal": "^4.0.2",
        "@types/react-router-dom": "=5.1.2",
        "@types/uuid": "^8.3.0",
        "@types/validator": "^13.1.3"
    }
}
