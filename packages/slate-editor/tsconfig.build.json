{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "noEmit": false,
        "emitDeclarationOnly": true,
        "declarationDir": "./build/types",
        "types": [],
        "paths": {
            "#components": ["src/components"],
            "#extensions/*": ["src/extensions/*"],
            "#icons": ["src/icons"],
            "#lib": ["src/lib"],
            "#modules/*": ["src/modules/*"],
        }
    },
    "exclude": [
        "node_modules",
        "**/*.test.*",
        "**/jsx.ts",
        "**/test-utils.ts",
    ],
    "files": [
        "./src/@types/svg.d.ts",
        "./src/types.ts",
    ],
}
