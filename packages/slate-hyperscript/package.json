{
    "name": "@prezly/slate-hyperscript",
    "version": "0.5.2",
    "description": "Hyperscript helpers for creating Slate documents with JSX",
    "license": "MIT",
    "main": "build/commonjs/index.cjs",
    "module": "build/esm/index.mjs",
    "types": "build/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./build/types/index.d.ts",
            "require": "./build/commonjs/index.cjs",
            "import": "./build/esm/index.mjs"
        }
    },
    "files": [
        "build",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prezly/slate.git"
    },
    "bugs": {
        "url": "https://github.com/prezly/slate/issues"
    },
    "homepage": "https://github.com/prezly/slate#readme",
    "scripts": {
        "lint": "eslint ./src --ext=.ts,.tsx",
        "build": "npm run type-check && NODE_ENV=production npm run build:transpile",
        "build:dev": "npm run type-check && NODE_ENV=development npm run build:transpile",
        "build:transpile": "npm run clean:build && npm run build:esm && npm run build:commonjs && npm run build:types",
        "build:types": "tsc --build ./tsconfig.json",
        "build:commonjs": "babel --config-file ../../babel.commonjs.config.json src/ --out-dir=build/commonjs/ --extensions=.ts --out-file-extension=.cjs",
        "build:esm": "babel --config-file ../../babel.esm.config.json src/ --out-dir=build/esm/ --extensions=.ts --out-file-extension=.mjs",
        "type-check": "tsc --build .",
        "clean": "npm run clean:build && npm run clean:node_modules",
        "clean:node_modules": "rimraf node_modules/",
        "clean:build": "rimraf build/ *.tsbuildinfo"
    },
    "peerDependencies": {
        "react": "^16.9.0",
        "slate": "^0.70.0"
    },
    "dependencies": {
        "is-plain-object": "^5.0.0"
    }
}
