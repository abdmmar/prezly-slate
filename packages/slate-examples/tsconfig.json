{
    "extends": "../../tsconfig.json",

    "compilerOptions": {
        "jsx": "preserve",
        "outDir": "./build",
        "rootDir": "./src",
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"],
    "include": ["next-env.d.ts", "./src"]
}
