{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.*"
  ],
  "include": [
    "next-env.d.ts",
    "./src"
  ]
}
