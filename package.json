{
    "name": "@prezly/slate",
    "description": "Prezly software built upon Slate",
    "license": "MIT",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prezly/slate.git"
    },
    "bugs": {
        "url": "https://github.com/prezly/slate/issues"
    },
    "homepage": "https://github.com/prezly/slate#readme",
    "type": "module",
    "scripts": {
        "build": "NODE_ENV=production turbo run build",
        "build:dev": "NODE_ENV=development turbo run build",
        "check": "pnpm prettier && pnpm test",
        "watch": "NODE_ENV=development turbo run watch",
        "lint": "pnpm --recursive lint",
        "lint:fix": "pnpm --recursive lint --fix",
        "test": "turbo run test",
        "test:matrix": "pnpm test:react16 && pnpm test:react17 && pnpm test:react18",
        "test:react16": "REACT_VERSION=16 pnpm test:react",
        "test:react17": "REACT_VERSION=17 pnpm test:react",
        "test:react18": "REACT_VERSION=18 pnpm test:react",
        "test:react": "pnpm install --no-lockfile -w react@$REACT_VERSION react-dom@$REACT_VERSION @types/react@$REACT_VERSION @types/react-dom@$REACT_VERSION && pnpm clean:build && pnpm build && pnpm test",
        "clean": "pnpm --recursive clean:build && pnpm --recursive clean:node_modules",
        "clean:build": "rimraf *.tsbuildinfo && rimraf node_modules/.cache/",
        "clean:node_modules": "rimraf node_modules/",
        "prettier": "prettier --check './**/*.(js|ts|tsx|scss)'",
        "prettier:fix": "pnpm prettier --write --no-list-different",
        "release": "pnpm release:prepare && pnpm release:publish",
        "release:build": "pnpm clean && pnpm install && pnpm build",
        "release:prepare": "pnpm release:build && pnpm check",
        "release:publish": "pnpm --recursive publish --access public --force"
    },
    "devEngines": {
        "node": ">= 16.13.0",
        "npm": ">= 7.7.0"
    },
    "dependencies": {
        "@types/react": "16",
        "@types/react-dom": "16",
        "react": "16",
        "react-dom": "16",
        "slate": "^0.91.4",
        "slate-history": "^0.86.0",
        "slate-react": "^0.91.7"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/core": "^7.18.5",
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-react": "^7.17.12",
        "@babel/preset-typescript": "^7.17.12",
        "@dr.pogodin/babel-preset-svgr": "^1.3.1",
        "@types/gulp-babel": "^6.1.30",
        "@types/jest": "^27.0.3",
        "@types/through2": "^2.0.36",
        "@types/vinyl": "^2.0.6",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "autoprefixer": "^10.4.13",
        "babel-plugin-add-import-extension": "^1.6.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-remove-imports": "^1.7.0",
        "branch-pipe": "^1.0.1",
        "concurrently": "^6.4.0",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-concat": "^2.6.1",
        "gulp-filter": "^7.0.0",
        "gulp-map": "^0.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.0.0",
        "gulp-tap": "^2.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "gulp-use": "^0.0.4",
        "jest": "^27.3.1",
        "jest-canvas-mock": "^2.3.1",
        "postcss": "^8.4.1",
        "postcss-modules": "^4.3.0",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "sass": "^1.32.8",
        "slate-hyperscript": "^0.81.3",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "tsc-fancy": "^1.1.2",
        "turbo": "^1.9.3",
        "typescript": "^4.7.4",
        "vinyl": "^2.2.1"
    }
}
