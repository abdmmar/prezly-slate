{
    "$schema": "https://turborepo.org/schema.json",
    "baseBranch": "origin/master",
    "pipeline": {
        "build": {
            "dependsOn": [
                "$NODE_ENV",
                "^build"
            ],
            "outputs": [
                "build/**"
            ],
            "inputs": ["src/**/*", "gulpfile.js"]
        },
        "watch": {
            "dependsOn": ["build"],
            "cache": false
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": [],
            "inputs": ["src/**/*.tsx", "src/**/*.ts"]
        }
    }
}
